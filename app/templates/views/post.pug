extends ../layouts/default

block appBody
    .app-body-part.start
        .board-post
            .board-subtitle
                each category, index in post.categories
                    h2 #{category}
            .board-title
                h1 #{post.title}
            .board-body
                .board-body-part
                    h3 #{post.content.excerpt}
                .board-body-part
                    p #{post.publishedDate}
                .board-body-part
                    p another paragraph
            .board-footer
                a.tool-scroll(href='#work')
                    .tool-media
                        svg#Layer_1(version='1.1', xmlns='http://www.w3.org/2000/svg', xmlns:xlink='http://www.w3.org/1999/xlink', x='0px', y='0px', viewbox='0 0 11 7', style='enable-background:new 0 0 11 7;', xml:space='preserve')
                            polyline(points='10,1.5 5.5,5.5 1,1.5 ')
    #content.app-body-part.explore
        .wall-post
            .wall-header
                .wall-title
                    h3
            .wall-body
                .wall-body-part
                    img.square(style="background-image: url('" + featuredImage + "')")
                .wall-body-part
                    p #{post.content.full}
