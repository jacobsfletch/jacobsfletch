extends ../layouts/default

include ../mixins/media/downarrow

block appBody
    .board-post
        .board-body
            .board-header
                .board-meta
                    h2
                        if post.categories
                            each category, index in post.categories
                                | #{category.key}
                                if (index + 1) < post.categories.length
                                    | , #{' '}
                        else
                            | no categories
                    h2
                        if post.tags
                            each tag, index in post.tags
                                | #{tag.key}
                                if (index + 1) < post.tags.length
                                    | , #{' '}
                        else
                            | no tags
                .board-title
                    h1 #{post.title}
                .board-subtitle
                    h3 published on #{post._.publishedDate.format()}
                    h3
                        if post.content.excerpt
                            | #{post.content.excerpt}
                        else
                            | no excerpt
            .board-body-part
                blockquote.type-blockquote
                    header
                        p
                            if post.quote
                                | #{post.quote}
                            else
                                | no quote
                    footer
                        p
                            if post.quoteAuthor
                                | #{post.quoteAuthor}
                            else
                                | no quote author
            .board-body-part
                h2 hashtags
                if post.hashtags
                    each hashtag in post.hashtags
                        h2
                            | ##{hashtag.key}
                    h2 [...]
                else
                    p no hashtags
            .panel-explore
                label.board-footer(for="explore")
                    .tool-scroll
                        .tool-media
                            +downArrow()
                .board-content
                    .wall-body-part
                        if post.featuredImage
                            img.square(style="background-image: url('" + post.featuredImage.url + "')")
                        else
                            p no featured image
                    .collection-main
                        h3 #{post.title}
                        p
                            if post.content.full
                                | !{post.content.full}
                            else
                                | no content
