extends ../layouts/default

include ../mixins/media/downarrow

block appBody
    .app-body-part.start
        .board-post
            .board-header
                .board-categories
                    h2
                        each category, index in post.categories
                            | #{category.key}
                            if (index + 1) < post.categories.length
                                | , #{' '}
                .board-tags
                    h2
                        each tag, index in post.tags
                            | #{tag.key}
                            if (index + 1) < post.tags.length
                                | , #{' '}
                .board-title
                    h1 #{post.title}
                .board-meta
                    h3 written by #{post.author.name.first} #{post.author.name.last}
                    h3 published on #{post._.publishedDate.format()}
                .board-subtitle
                    h3 #{post.content.excerpt}
            .board-body
                .board-body-part
                    blockquote.type-blockquote
                        p #{post.quote}
                        footer
                            p #{post.quoteAuthor}
                .board-body-part
                    h2 hashtags
                    each hashtag, index in post.hashtags
                        h2
                            | ##{hashtag.key}
                    h2 [...]
            .board-footer
                a.tool-scroll(href='#post')
                    .tool-media
                        +downArrow()
    #post.app-body-part.explore
        .wall-post
            .wall-header
                .wall-title
                    h3 full post
            .wall-body
                .wall-body-part
                    img.square(style="background-image: url('" + post.featuredImage.url + "')")
                .wall-body-part
                    p #{post.content.full}
