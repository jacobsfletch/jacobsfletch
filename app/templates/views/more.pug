extends ../layouts/default

include ../mixins/media/downarrow

block appBody
    .board-bio
        .board-body
            .board-header
                .board-subtitle
                    h1
                        if resume.intro.a
                            | #{resume.intro.a}
                        else
                            | no intro a
                .board-title
                    h2
                        if resume.intro.b
                            | #{resume.intro.b}
                        else
                            | no intro b
            .board-body-part
                h3
                    if resume.specialization
                        | #{resume.specialization}
                    else
                        | no specialization
            .board-body-part
                h3
                    if resume.quote
                        | #{resume.quote}
                    else
                        | no quote
            .panel-explore
                label.board-footer(for="explore")
                    .tool-scroll
                        .tool-media
                            +downArrow()
                .board-content
                    .collection-main
                        h3 philosophy
                        p
                            if resume.philosophy
                                | !{resume.philosophy}
                            else
                                | no philosophy
                    .collection-main
                        h3 education
                        p
                            if resume.education
                                | !{resume.education}
                            else
                                | no education
                    .collection-main
                        h3 experience
                        p
                            if resume.experience
                                | !{resume.experience}
                            else
                                | no experience
                    .collection-main
                        h3 design skills
                        p
                            if resume.skills.design
                                | !{resume.skills.design}
                            else
                                | no design skills
                    .collection-main
                        h3 development skills
                        p
                            if resume.skills.development
                                | !{resume.skills.development}
                            else
                                | no development skills
                    .collection-main
                        h3 more about me
                        p
                            if resume.personal
                                | !{resume.personal}
                            else
                                | no personals
