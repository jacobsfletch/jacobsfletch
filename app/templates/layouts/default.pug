                scrollAnimate = function(selector) {
                    var panel = document.getElementById(selector);
                    var originalOffset = panel.offsetTop;
                    var panelBody = document.getElementById("panelBody");

                    if (window.addEventListener) {
                        window.addEventListener("mousewheel", wheelHandler, false);
                        window.addEventListener("DOMMouseScroll", wheelHandler, false);
                        window.addEventListener("touchstart", startHandler, false);
                        window.addEventListener("touchmove", wheelHandler, false);
                    }
                    else window.attachEvent("onmousewheel", wheelHandler);

                    var maxOffset = panel.offsetTop;
                    var minOffset = 0;
                    var touchDistance = 0;
                    var desktopThreshold = 300;
                    var mobileThreshold = 50;
                    var start = 0;

                    function startHandler(event) {
                        start = event.touches[0].pageY;
                        wheelHandler(event);
                    }

                    function wheelHandler(event) {
                        panelBodyScroll = panelBody.scrollTop;
                        if (event.touches) {
                            touchDistance = (start - event.touches[0].pageY);
                        }
                        if (event.wheelDelta) {
                            var wheelDistance = event.wheelDelta || -event.detail;
                        }
                        if((wheelDistance < 0) || (touchDistance > 0)) {
                            document.getElementById("explore").checked = true;
                        } else if((wheelDistance > 0 || touchDistance < 0) && panelBodyScroll <= 0) {
                            document.getElementById("explore").checked = false;
                        }
                    }
                }

                scrollAnimate("panelExplore");
